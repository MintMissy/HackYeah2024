{
  "manifest_version": 3,
  "name": "My TypeScript Chrome Extension",
  "version": "1.0.0",
  "description": "A simple Chrome extension using TypeScript",
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "public/popup.html"
  }
}